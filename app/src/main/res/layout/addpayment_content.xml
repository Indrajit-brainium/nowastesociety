<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvItemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/lora_regular"
            android:text="Enter your payment details :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etuserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorText"
                android:fontFamily="@font/lora_regular"
                android:hint="Name on card"
                android:inputType="text"
                android:textColorHint="@color/colorText" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCardNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorText"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lora_regular"
                android:hint="Your card number"
                android:inputType="numberPassword"
                android:maxLength="16"
                android:textColorHint="@color/colorText" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etconfirmCardNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:backgroundTint="@color/colorText"
                android:fontFamily="@font/lora_regular"
                android:hint="Confirm card number"
                android:inputType="numberPassword"
                android:maxLength="16"
                android:textColorHint="@color/colorText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">




                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lora_regular"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:textAlignment="center"
                    android:hint="MM"
                    android:inputType="number"
                    android:maxLength="2"
                    android:backgroundTint="@color/colorText"
                    android:textColorHint="@color/colorText" />



                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/lora_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:hint="YY"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:maxLength="2"
                    android:backgroundTint="@color/colorText"
                    android:textColorHint="@color/colorText"/>



                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCVV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/lora_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:hint="CVV"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:backgroundTint="@color/colorText"
                    android:textColorHint="@color/colorText"/>


            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Remember my card details"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_weight="0.2"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/lora_regular"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7" />


        </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddcard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_70sdp"
                android:fontFamily="@font/lora_regular"
                android:background="@drawable/submitbutton"
                android:text="Add card"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />





        </LinearLayout>


    </ScrollView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_bottom_view"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:background="@color/colorWhite"
        android:weightSum="5"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHome"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/ic_home"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:fontFamily="@font/lora_regular"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnProfile"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/ic_man_avatar"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:fontFamily="@font/lora_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnList"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFav"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:background="@drawable/ic_love" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:fontFamily="@font/lora_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCart"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/ic_commerce_and_shopping"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:fontFamily="@font/lora_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>